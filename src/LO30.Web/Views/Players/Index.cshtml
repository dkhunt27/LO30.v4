@model IEnumerable<LO30.Web.Models.Objects.Player>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-condensed">
    <tr>
      <th>
        @Html.ActionLink(@Html.DisplayNameFor(model => model.PlayerId), "Index", new { sortOrder = ViewBag.PlayerIdSortParm })
      </th>
        <th>
          @Html.ActionLink(@Html.DisplayNameFor(model => model.LastName), "Index", new { sortOrder = ViewBag.LastNameSortParm })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.FirstName), "Index", new { sortOrder = ViewBag.FirstNameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreferredPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profession)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shoots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suffix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WifesName)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.PlayerId)
      </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreferredPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profession)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shoots)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suffix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WifesName)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.PlayerId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.PlayerId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.PlayerId">Delete</a>
        </td>
    </tr>
}
</table>
