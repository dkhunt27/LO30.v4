@model List<SeasonSelectorViewModel>

<ul class="nav navbar-nav">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Component.Invoke("SeasonSelected") <span class="caret"></span></a>
      <ul class="dropdown-menu scrollable-menu">
        @foreach (var item in Model)
      {
        if (item.IsSelected == true)
        {
            <li>
              <b>
                <a href="@Url.Action("CriteriaUpdateSeason", "Home",  new { selectedSeasonId = @item.SeasonId, path = ViewContext.HttpContext.Request.Path, queryString = ViewContext.HttpContext.Request.QueryString, url = ViewContext.HttpContext.Request.GetDisplayUrl()})">@item.SeasonName</a>
              </b>
            </li>
          }
          else
          {
            <li><a href="@Url.Action("CriteriaUpdateSeason", "Home",  new { selectedSeasonId = @item.SeasonId, path = ViewContext.HttpContext.Request.Path, queryString = ViewContext.HttpContext.Request.QueryString, url = ViewContext.HttpContext.Request.GetDisplayUrl()})">@item.SeasonName</a></li>
          }
        }
      </ul>
    </li>
  </ul>
