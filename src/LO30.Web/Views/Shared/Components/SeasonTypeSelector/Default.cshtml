@model List<SeasonTypeSelectorViewModel>

<ul class="nav navbar-nav">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Component.Invoke("SeasonTypeSelected") <span class="caret"></span></a>
    <ul class="dropdown-menu scrollable-menu">
      @foreach (var item in Model)
      {
        if (item.IsSelected == true)
        {
          <li><a href="@Url.Action("CriteriaUpdateSeasonType", "Home",  new { selectedSeasonTypeId = @item.SeasonTypeId, path = ViewContext.HttpContext.Request.Path, queryString = ViewContext.HttpContext.Request.QueryString})">@item.SeasonTypeName</a></li>
        }
        else
        {
          <li><a href="@Url.Action("CriteriaUpdateSeasonType", "Home",  new { selectedSeasonTypeId = @item.SeasonTypeId, path = ViewContext.HttpContext.Request.Path, queryString = ViewContext.HttpContext.Request.QueryString})">@item.SeasonTypeName</a></li>
        }
      }
    </ul>
  </li>
</ul>
